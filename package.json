{
    "name": "sample-api",
    "version": "1.0.0",
    "description": "Nodejs Sample Api with TypeScript",
    "scripts": {
        "start": "node ./dist/server.js",
        "test": "jest --no-cache",
        "build": "tsc",
        "dev": "ts-node-dev --respawn --transpileOnly ./src/server.ts",
        "prod": "npm run build && npm run start"
    },
    "author": "joserobertoecjr",
    "license": "",
    "dependencies": {
        "@types/express": "4.17.1",
        "@types/jest": "^24.0.20",
        "@types/supertest": "^2.0.8",
        "body-parser": "1.19.0",
        "express": "4.17.1",
        "jest": "^24.9.0",
        "nodemon": "1.19.4",
        "supertest": "^4.0.2",
        "ts-jest": "^24.1.0",
        "ts-node-dev": "^1.0.0-pre.43"
    },
    "jest": {
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "testRegex": "\\.test\\.ts",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
